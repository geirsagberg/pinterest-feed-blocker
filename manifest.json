{
  "manifest_version": 3,
  "name": "Pinterest Feed Blocker",
  "version": "1.0",
  "description": "Blocks Pinterest main feed, recommendations, and related images to reduce distractions",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}